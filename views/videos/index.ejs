<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Videos</title>
  <!-- Enlace al archivo de estilos -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/styles/video-list.css">
</head>
<body>
 <!-- Navbar -->

 <nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand text-white" href="/">
    <i class="fas fa-film"></i> Video App
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link text-white" href="/upload">
          <i class="fas fa-cloud-upload-alt"></i> Upload Videos
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="/reproductor">
          <i class="fas fa-play"></i> Reproductor
        </a>
      </li>
      <!-- Agrega el enlace para acceder a la sección de listas de reproducción -->
      <li class="nav-item">
        <a class="nav-link text-white" href="/playlists">
          <i class="fas fa-list"></i> Listas de Reproducción
        </a>
      </li>
    </ul>
  </div>
</nav>

    <!-- videos list -->

  <div class="container mt-5">
    <h1 class="mb-4">Listado de Videos</h1>
    <div class="row">
      <% videos.forEach(video => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= video.title %></h5>
              <p class="card-text"><%= video.description %></p>
              <video width="100%" controls>
                <source src="/uploads/<%= video.filename %>" type="video/mp4">
                Tu navegador no soporta el tag de video.
              </video>
              <div class="mt-3">
                <a href="/delete/<%= video.id %>" class="btn btn-danger mr-2">Eliminar</a>
                <button class="btn btn-primary" data-toggle="modal" data-target="#renameModal<%= video.id %>">Cambiar Nombre</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal para cambiar nombre -->
        <div class="modal fade" id="renameModal<%= video.id %>" tabindex="-1" role="dialog" aria-labelledby="renameModalLabel<%= video.id %>" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="renameModalLabel<%= video.id %>">Cambiar Nombre del Video</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <!-- Aquí puedes colocar un formulario para cambiar el nombre -->
                <form action="/rename/<%= video.id %>" method="post">
                  <div class="form-group">
                    <label for="newName">Nuevo Nombre</label>
                    <input type="text" class="form-control" id="newName" name="newName" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </form>
              </div>
            </div>
          </div>
        </div>

      <% }); %>
    </div>
  </div>

  <!-- Agrega los scripts de Bootstrap al final del cuerpo -->
 
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
  
</body>
</html>




<!-- views/layouts/mainLayout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - Video App</title>
  <!-- Enlace al archivo de estilos común a todos los layouts -->
  <link rel="stylesheet" href="/styles/main.css">
  <!-- Otros enlaces a estilos, scripts, etc. comunes -->
</head>
<body>
  <!-- Navbar común a todos los layouts -->
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <a class="navbar-brand text-white" href="/">
      <i class="fas fa-film"></i> Video App
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link text-white" href="/videos">
            <i class="fas fa-film"></i> Videos
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/upload">
            <i class="fas fa-cloud-upload-alt"></i> Upload Videos
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/reproductor">
            <i class="fas fa-play"></i> Reproductor
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/playlists">
            <i class="fas fa-list"></i> Listas de Reproducción
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Contenido específico de cada página -->
  <div class="container">
    <!-- Contenido de la página -->
    <%= content %>
  </div>

  <!-- Scripts comunes a todos los layouts -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>
</html>
